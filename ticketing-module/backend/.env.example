# Ticketing Module Environment Variables

# Server Configuration
NODE_ENV=development
PORT=3004

# Database
MONGODB_URI=mongodb://localhost:27017/holidaibutler-ticketing
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB_AVAILABILITY=1

# Authentication
JWT_SECRET=your-jwt-secret-key-change-in-production

# Payment Engine Integration
PAYMENT_ENGINE_URL=http://localhost:3005

# Frontend URL (for return URLs)
FRONTEND_URL=http://localhost:3000

# CORS
CORS_ORIGIN=*

# Logging
LOG_LEVEL=info

# Email (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-email-password
SMTP_FROM="HolidaiButler" <tickets@holidaibutler.com>

# QR Code Security
QR_SECRET_KEY=your-qr-secret-key-change-in-production

# File Storage (S3/CloudFront)
S3_BUCKET_URL=https://your-bucket.s3.amazonaws.com
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=eu-west-1

# Ticket Configuration
RESERVATION_TIMEOUT_MINUTES=15
DEFAULT_TIMEZONE=Europe/Amsterdam
