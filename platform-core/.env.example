# Platform Core Configuration
NODE_ENV=development
PORT=3001

# API Gateway
GATEWAY_HOST=0.0.0.0
GATEWAY_PORT=3001
API_PREFIX=/api/v1

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# Module Service URLs
ADMIN_MODULE_URL=http://localhost:3003
TICKETING_MODULE_URL=http://localhost:3004
PAYMENT_MODULE_URL=http://localhost:3005
PLATFORM_FRONTEND_URL=http://localhost:3002

# Hetzner MySQL Database (Central Database)
DB_HOST=your-hetzner-server.com
DB_PORT=3306
DB_NAME=pxoziy_db1
DB_USER=your-db-user
DB_PASSWORD=your-db-password
DB_POOL_MAX=20
DB_POOL_MIN=5
DB_TIMEZONE=+01:00

# MongoDB (Admin Module)
MONGODB_URI=mongodb://localhost:27017/holidaibutler_admin

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# MailerLite Integration
MAILERLITE_API_KEY=your-mailerlite-api-key
MAILERLITE_FROM_EMAIL=noreply@holidaibutler.com
MAILERLITE_FROM_NAME=HolidaiButler
MAILERLITE_GROUP_ID=your-default-group-id

# Event Bus Configuration
EVENT_BUS_ENABLED=true
EVENT_RETENTION_DAYS=30

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_DIR=logs
LOG_MAX_SIZE=20m
LOG_MAX_FILES=14d

# Automation & Cron Jobs
ENABLE_CRON_JOBS=true
SYNC_INTERVAL_MINUTES=15
CLEANUP_INTERVAL_HOURS=24

# AI Integration (MistralAI for HoliBot)
MISTRAL_API_KEY=your-mistral-api-key
MISTRAL_MODEL=mistral-medium

# Security
CORS_ORIGIN=http://localhost:3002,http://localhost:5174
BCRYPT_ROUNDS=10

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090
