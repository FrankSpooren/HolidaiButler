# ============================================================================
# HolidaiButler Platform Core - PRODUCTION Environment Configuration
# ============================================================================
# Copy this file to /var/www/api.holidaibutler.com/.env on the Hetzner server
# and fill in the actual production values.
#
# IMPORTANT: This file should NEVER be committed to version control with
# actual credentials. Keep the real .env file only on the production server.
# ============================================================================

# ============================================================================
# GENERAL SETTINGS
# ============================================================================
NODE_ENV=production
LOG_LEVEL=info
DEFAULT_TIMEZONE=Europe/Amsterdam
DEFAULT_LOCALE=nl-NL
DEFAULT_CURRENCY=EUR

# ============================================================================
# SERVER PORTS
# ============================================================================
PLATFORM_CORE_PORT=3001

# ============================================================================
# DATABASE - MySQL (Hetzner pxoziy_db1)
# ============================================================================
# Fill in the actual Hetzner database credentials
DATABASE_HOST=localhost
DATABASE_PORT=3306
DATABASE_NAME=pxoziy_db1
DATABASE_USER=pxoziy_u1
DATABASE_PASSWORD=YOUR_DATABASE_PASSWORD_HERE
DATABASE_POOL_MAX=20
DATABASE_POOL_MIN=5

# MySQL Connection URL (alternative format)
DATABASE_URL=mysql://pxoziy_u1:YOUR_DATABASE_PASSWORD_HERE@localhost:3306/pxoziy_db1

# ============================================================================
# REDIS (Caching & Sessions) - Optional
# ============================================================================
# If Redis is not available, the system will work without caching
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_TLS=false

# ============================================================================
# JWT AUTHENTICATION
# ============================================================================
# Generate secure secrets with: openssl rand -hex 32
JWT_SECRET=GENERATE_A_SECURE_64_CHAR_HEX_STRING
JWT_ADMIN_SECRET=GENERATE_A_SECURE_64_CHAR_HEX_STRING
JWT_REFRESH_SECRET=GENERATE_A_SECURE_64_CHAR_HEX_STRING
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# ============================================================================
# SECURITY
# ============================================================================
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
ENCRYPTION_KEY=GENERATE_A_SECURE_64_CHAR_HEX_STRING
QR_SECRET_KEY=GENERATE_A_SECURE_RANDOM_STRING
API_KEY_SECRET=GENERATE_A_SECURE_RANDOM_STRING
SESSION_SECRET=GENERATE_A_SECURE_RANDOM_STRING
CSRF_SECRET=GENERATE_A_SECURE_RANDOM_STRING

# ============================================================================
# CORS CONFIGURATION
# ============================================================================
CORS_ORIGIN=https://test.holidaibutler.com,https://holidaibutler.com

# ============================================================================
# RATE LIMITING
# ============================================================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ============================================================================
# AI SERVICES (HoliBot)
# ============================================================================
MISTRAL_API_KEY=YOUR_MISTRAL_API_KEY
MISTRAL_MODEL=mistral-small-latest

# Optional: Claude or OpenAI as alternatives
# CLAUDE_API_KEY=
# OPENAI_API_KEY=

# ============================================================================
# EMAIL - MailerLite
# ============================================================================
MAILERLITE_API_KEY=YOUR_MAILERLITE_API_KEY
MAILERLITE_FROM_EMAIL=noreply@holidaibutler.com
MAILERLITE_FROM_NAME=HolidaiButler

# ============================================================================
# FEATURE FLAGS
# ============================================================================
ENABLE_CRON_JOBS=true
ENABLE_METRICS=true
ENABLE_SWAGGER=false
ENABLE_AI_RECOMMENDATIONS=true

# ============================================================================
# FILE UPLOAD
# ============================================================================
MAX_FILE_SIZE=10485760
UPLOAD_DIR=/var/www/api.holidaibutler.com/uploads
EXPORT_DIR=/var/www/api.holidaibutler.com/exports
