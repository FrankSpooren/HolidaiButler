# Payment Engine Environment Variables

# Server Configuration
NODE_ENV=development
PORT=3005

# Database (PostgreSQL)
DATABASE_URL=postgresql://localhost:5432/holidaibutler_payments

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=2

# Authentication
JWT_SECRET=your-jwt-secret-key-change-in-production

# Adyen Configuration
ADYEN_API_KEY=your-adyen-api-key
ADYEN_ENVIRONMENT=test
ADYEN_MERCHANT_ACCOUNT=your-merchant-account
ADYEN_HMAC_KEY=your-hmac-key-for-webhook-verification
ADYEN_CLIENT_KEY=pub_test_your-client-key

# Auto-capture configuration
AUTO_CAPTURE=true

# Ticketing Module Integration
TICKETING_MODULE_URL=http://localhost:3004

# CORS
CORS_ORIGIN=*

# Logging
LOG_LEVEL=info
