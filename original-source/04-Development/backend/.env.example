# ==============================================
# HolidAIbutler Backend - Environment Variables
# ==============================================
# Copy this file to .env and fill in your values

# Server Configuration
NODE_ENV=development
PORT=3001
API_BASE_URL=http://localhost:3001

# Database Configuration (Hetzner)
DB_HOST=your-hetzner-host.com
DB_PORT=3306
DB_USER=holidaibutler_app
DB_PASSWORD=your_secure_password_here
DB_NAME=holidaibutler
DB_CONNECTION_LIMIT=10

# JWT Authentication
JWT_SECRET=your_super_secret_jwt_key_change_in_production_min_32_chars
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d

# Cookie Settings
COOKIE_SECRET=your_cookie_secret_key_change_in_production

# CORS Settings
CORS_ORIGIN=http://localhost:5173
# For production, add: https://www.holidaibutler.com

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Email Configuration (Optional - for password reset)
SMTP_HOST=smtp.sendgrid.net
SMTP_PORT=587
SMTP_USER=apikey
SMTP_PASSWORD=your_sendgrid_api_key
SMTP_FROM=noreply@holidaibutler.com

# External Services
GOOGLE_PLACES_API_KEY=your_google_places_key_optional

# Logging
LOG_LEVEL=info
# Options: error, warn, info, http, verbose, debug, silly

# Frontend URL
FRONTEND_URL=http://localhost:5173
# For production: https://www.holidaibutler.com

# GeoJSON Export
GEOJSON_OUTPUT_DIR=../frontend/public/data
GEOJSON_FILENAME=pois.geojson
