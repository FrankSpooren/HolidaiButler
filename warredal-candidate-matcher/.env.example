# =================================
# Warredal Candidate Matcher
# Environment Configuration
# =================================

# Database
DB_HOST=postgres
DB_PORT=5432
DB_NAME=warredal_matcher
DB_USER=postgres
DB_PASSWORD=ChangeMeToSecurePassword123!

# JWT Authentication
JWT_SECRET=ChangeThisToAVeryLongRandomSecretKey123!
JWT_EXPIRES_IN=7d

# MailerLite Configuration
MAILERLITE_API_KEY=your_mailerlite_api_key_here
MAILERLITE_GROUP_ID=your_group_id_here

# Email Sender (optional)
SENDER_NAME=Warredal Recruitment
SENDER_EMAIL=recruitment@warredal.be

# LinkedIn API (voor toekomstige integratie)
LINKEDIN_CLIENT_ID=
LINKEDIN_CLIENT_SECRET=
LINKEDIN_REDIRECT_URI=

# Frontend URL (voor CORS)
FRONTEND_URL=http://localhost:3000

# API URL (voor frontend)
VITE_API_URL=http://localhost:5000

# Scraping Configuration
SCRAPING_DELAY_MIN=2000
SCRAPING_DELAY_MAX=5000
SCRAPING_MAX_RETRIES=3

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info

# Node Environment
NODE_ENV=production
