# Sales Pipeline Module - Environment Configuration

# ===========================================
# SERVER
# ===========================================
NODE_ENV=development
PORT=3006
SERVICE_NAME=sales-pipeline-module

# ===========================================
# CORS
# ===========================================
CORS_ORIGIN=http://localhost:5175,http://localhost:3000

# ===========================================
# DATABASE (PostgreSQL)
# ===========================================
DB_HOST=localhost
DB_PORT=5432
DB_NAME=sales_pipeline
DB_USER=postgres
DB_PASSWORD=your_password_here
DB_SSL=false
DB_POOL_MAX=20
DB_POOL_MIN=5

# ===========================================
# REDIS
# ===========================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# ===========================================
# JWT AUTHENTICATION
# ===========================================
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# ===========================================
# SECURITY
# ===========================================
MAX_LOGIN_ATTEMPTS=5
LOCK_DURATION_MINUTES=30

# ===========================================
# EMAIL (SMTP)
# ===========================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM=noreply@holidaibutler.com

# ===========================================
# WHATSAPP BUSINESS API
# ===========================================
WHATSAPP_PHONE_NUMBER_ID=your_phone_number_id
WHATSAPP_BUSINESS_ACCOUNT_ID=your_business_account_id
WHATSAPP_ACCESS_TOKEN=your_access_token
WHATSAPP_WEBHOOK_VERIFY_TOKEN=your_verify_token
WHATSAPP_APP_SECRET=your_app_secret

# ===========================================
# FILE STORAGE
# ===========================================
UPLOAD_DIR=./uploads
EXPORT_DIR=./exports
MAX_FILE_SIZE=10485760

# ===========================================
# LOGGING
# ===========================================
LOG_LEVEL=debug
LOG_DIR=./logs

# ===========================================
# LEAD SCORING
# ===========================================
MQL_THRESHOLD=50
SQL_THRESHOLD=75

# ===========================================
# DEAL SETTINGS
# ===========================================
STALE_DEAL_DAYS=14

# ===========================================
# SCHEDULED JOBS
# ===========================================
ENABLE_CRON_JOBS=true

# ===========================================
# FRONTEND URL
# ===========================================
FRONTEND_URL=http://localhost:5175

# ===========================================
# PLATFORM INTEGRATION
# ===========================================
PLATFORM_CORE_URL=http://localhost:3001
