# Server Configuration
NODE_ENV=development
PORT=3006

# Database (Shared with Ticketing Module)
DATABASE_HOST=your-hetzner-mysql-host
DATABASE_PORT=3306
DATABASE_NAME=pxoziy_db1
DATABASE_USER=your-mysql-username
DATABASE_PASSWORD=your-mysql-password

# Redis (Shared - Availability Engine)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB_AVAILABILITY=1
REDIS_PASSWORD=

# Payment Engine (Shared Service)
PAYMENT_ENGINE_URL=http://localhost:3005
PAYMENT_ENGINE_API_KEY=your-payment-engine-api-key

# Email Service (MailerLite - Shared)
MAILERLITE_API_KEY=your-mailerlite-api-key
MAILERLITE_FROM_EMAIL=reservations@holidaibutler.com
MAILERLITE_FROM_NAME=HolidaiButler Reservations

# SMS Provider (Twilio)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+31612345678

# TheFork Integration
THEFORK_API_KEY=your-thefork-api-key
THEFORK_API_URL=https://api.thefork.com/v1
THEFORK_WEBHOOK_SECRET=your-webhook-secret

# Google Reservations
GOOGLE_RESERVATIONS_API_KEY=your-google-api-key
GOOGLE_RESERVATIONS_PARTNER_ID=your-partner-id

# Instagram/Facebook Integration
FACEBOOK_APP_ID=your-facebook-app-id
FACEBOOK_APP_SECRET=your-facebook-app-secret

# POS Integrations
TOAST_API_KEY=your-toast-api-key
SQUARE_ACCESS_TOKEN=your-square-access-token
LIGHTSPEED_API_KEY=your-lightspeed-api-key

# Security
JWT_SECRET=your-jwt-secret-change-in-production
API_KEY_SECRET=your-api-key-secret
ENCRYPTION_KEY=your-encryption-key-32-chars

# URLs
API_URL=http://localhost:3006
FRONTEND_URL=http://localhost:5173
TICKETING_API_URL=http://localhost:3004

# Logging
LOG_LEVEL=info
LOG_FILE=logs/reservations.log

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Reservation Settings
DEFAULT_SEATING_DURATION=90
RESERVATION_LOCK_DURATION=900
WAITLIST_EXPIRY_DAYS=7
REMINDER_HOURS_BEFORE=24

# Feature Flags
ENABLE_THEFORK_SYNC=false
ENABLE_GOOGLE_SYNC=false
ENABLE_POS_INTEGRATION=false
ENABLE_AI_RECOMMENDATIONS=false
