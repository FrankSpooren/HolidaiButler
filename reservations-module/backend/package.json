{
  "name": "@holidaibutler/reservations-module",
  "version": "1.0.0",
  "description": "Restaurant reservation system for HolidaiButler - inspired by TheFork, OpenTable & Resy",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest --coverage",
    "test:unit": "jest --testPathPattern=unit",
    "test:integration": "jest --testPathPattern=integration",
    "migrate": "node scripts/migrate.js",
    "migrate:status": "node scripts/migrate.js --status",
    "migrate:undo": "node scripts/migrate.js --undo",
    "seed": "node scripts/seed.js",
    "lint": "eslint .",
    "format": "prettier --write \"**/*.js\""
  },
  "keywords": [
    "restaurant",
    "reservation",
    "table-management",
    "booking",
    "hospitality"
  ],
  "author": "HolidaiButler Development Team",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.13.2",
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "express": "^4.21.2",
    "express-rate-limit": "^7.5.1",
    "helmet": "^7.2.0",
    "joi": "^17.13.3",
    "jsonwebtoken": "^9.0.2",
    "moment-timezone": "^0.5.48",
    "morgan": "^1.10.1",
    "mysql2": "^3.15.3",
    "node-cron": "^3.0.3",
    "redis": "^4.7.1",
    "sequelize": "^6.37.7",
    "twilio": "^4.23.0",
    "umzug": "^3.7.0",
    "uuid": "^9.0.1",
    "winston": "^3.18.3"
  },
  "devDependencies": {
    "eslint": "^8.55.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "prettier": "^3.1.1",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
