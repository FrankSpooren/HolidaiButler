{
  "name": "holidaibutler-backend",
  "version": "1.0.0",
  "description": "HolidAIButler - Mediterranean AI Travel Platform Backend",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest --watchAll=false",
    "test:watch": "jest --watchAll",
    "test:coverage": "jest --coverage --watchAll=false",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "eslint . --ext .js,.jsx,.ts,.tsx --fix",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,md}\"",
    "build": "echo 'No build step needed for Node.js'",
    "seed": "node scripts/seed.js",
    "migrate": "node scripts/migrate.js",
    "docker:build": "docker build -t holidaibutler-backend .",
    "docker:run": "docker run -p 3001:3001 holidaibutler-backend",
    "deploy:staging": "npm run lint && npm run test && npm run docker:build",
    "deploy:production": "npm run lint && npm run test:coverage && npm run docker:build"
  },
  "keywords": [
    "ai",
    "travel",
    "mediterranean",
    "costa-blanca",
    "claude",
    "tourism",
    "nodejs",
    "express"
  ],
  "author": "HolidAIButler Team",
  "license": "PROPRIETARY",
  "dependencies": {
    "@anthropic-ai/sdk": "^0.24.3",
    "express": "^4.18.2",
    "mongoose": "^8.0.3",
    "socket.io": "^4.7.4",
    "jsonwebtoken": "^9.0.2",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "compression": "^1.7.4",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "redis": "^4.6.10",
    "nodemailer": "^6.9.7",
    "multer": "^1.4.5-lts.1",
    "sharp": "^0.32.6",
    "axios": "^1.6.2",
    "dotenv": "^16.3.1",
    "winston": "^3.11.0",
    "pino": "^8.16.2",
    "pino-pretty": "^10.3.1",
    "moment": "^2.29.4",
    "moment-timezone": "^0.5.43",
    "lodash": "^4.17.21",
    "crypto": "^1.0.1",
    "joi": "^17.11.0",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "passport-google-oauth20": "^2.0.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0",
    "node-cron": "^3.0.3",
    "bull": "^4.12.0",
    "ioredis": "^5.3.2",
    "stripe": "^14.8.0",
    "twilio": "^4.19.0",
    "geolib": "^3.3.4",
    "xml2js": "^0.6.2",
    "csv-parser": "^3.0.0",
    "fast-csv": "^4.3.6",
    "uuid": "^9.0.1",
    "slugify": "^1.6.6",
    "validator": "^13.11.0",
    "cloudinary": "^1.41.0",
    "aws-sdk": "^2.1498.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "eslint": "^8.55.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-jest": "^27.6.0",
    "prettier": "^3.1.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "@types/node": "^20.10.4",
    "mongodb-memory-server": "^9.1.3",
    "nock": "^13.4.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "**/*.js",
      "!**/node_modules/**",
      "!**/coverage/**",
      "!**/dist/**",
      "!server.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 70,
        "functions": 70,
        "lines": 70,
        "statements": 70
      }
    },
    "testMatch": [
      "**/__tests__/**/*.js",
      "**/?(*.)+(spec|test).js"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setup.js"
    ]
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write",
      "git add"
    ],
    "*.{json,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run test"
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/holidaibutler/backend.git"
  },
  "bugs": {
    "url": "https://github.com/holidaibutler/backend/issues"
  },
  "homepage": "https://holidaibutler.com"
}