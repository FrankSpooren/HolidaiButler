# Server Configuration
PORT=3000
NODE_ENV=development
HOST=0.0.0.0

# Mistral API Configuration
MISTRAL_API_KEY=your_mistral_api_key_here
MISTRAL_BASE_URL=https://api.mistral.ai/v1

# ChromaDB Configuration
CHROMADB_URL=http://127.0.0.1:8000
CHROMADB_COLLECTION_NAME=calpe_pois

# Session Storage (Optional Redis)
USE_REDIS=false
REDIS_URL=redis://localhost:6379

# Rate Limiting
RATE_LIMIT_WINDOW=3600000
RATE_LIMIT_MAX=100

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# Logging
LOG_LEVEL=info

# Phase 1: Smart Dynamic Filtering Configuration
SEARCH_MAX_RESULTS=100
ENABLE_SCORING_CACHE=true
SCORING_CACHE_TIMEOUT=300000
ENABLE_PERFORMANCE_LOGGING=true
DEFAULT_SCORING_WEIGHTS={"semanticSimilarity":0.4,"userRating":0.2,"distance":0.2,"freshness":0.1,"popularity":0.1}